<portlet-app
  xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="1.0">
  <portlet>
    <description>Multifactor authentication portlet</description>
    <portlet-name>multifactorAuthentication</portlet-name>
    <display-name>Multifactor authentication portlet</display-name>
    <portlet-class>org.exoplatform.commons.api.portlet.GenericDispatchedViewPortlet</portlet-class>
    <init-param>
      <name>portlet-view-dispatched-file-path</name>
      <value>/html/multifactorAuthentication.html</value>
    </init-param>
    <init-param>
      <name>preload.resource.bundles</name>
      <value>locale.portlet.multifactorAuthentication.multifactorAuthentication</value>
    </init-param>
    <expiration-cache>-1</expiration-cache>
    <cache-scope>PUBLIC</cache-scope>
    <supports>
      <mime-type>text/html</mime-type>
    </supports>
    <supported-locale>en</supported-locale>
    <resource-bundle>locale.portlet.multifactorAuthentication.multifactorAuthentication</resource-bundle>
    <portlet-info>
      <title>Multifactor authentication portlet for eXo Platform</title>
      <short-title>multifactor-authentication</short-title>
      <keywords>multifactor-authentication</keywords>
    </portlet-info>
    <security-role-ref>
      <role-name>admin</role-name>
      <role-link>admin</role-link>
    </security-role-ref>
  </portlet>

  <portlet>
    <description>Mfa Access portlet</description>
    <portlet-name>mfaAccess</portlet-name>
    <display-name>Mfa Access portlet</display-name>
    <portlet-class>org.exoplatform.commons.api.portlet.GenericDispatchedViewPortlet</portlet-class>
    <init-param>
      <name>portlet-view-dispatched-file-path</name>
      <value>/html/mfa-access.html</value>
    </init-param>
    <init-param>
      <name>preload.resource.bundles</name>
      <value>locale.portlet.mfaAccess.mfaAccess</value>
    </init-param>
    <expiration-cache>-1</expiration-cache>
    <cache-scope>PUBLIC</cache-scope>
    <supports>
      <mime-type>text/html</mime-type>
    </supports>
    <supported-locale>en</supported-locale>
    <resource-bundle>locale.portlet.mfaAccess.mfaAccess</resource-bundle>
    <portlet-info>
      <title>Mfa Access portlet for eXo Platform</title>
      <short-title>mfa-access</short-title>
      <keywords>mfa-access</keywords>
    </portlet-info>
  </portlet>
</portlet-app>
