{
  "name": "multifactor-authentication",
  "version": "1.0.0",
  "description": "Exo Platform MFA Framework",
  "repository": {
    "type": "git",
    "url": "https://github.com/exoplatform/multifactor-authentication"
  },
  "scripts": {
    "watch": "webpack --config webpack.watch.js --progress --colors --watch -d",
    "lint": "eslint --fix \"./src/main/webapp/vue-apps/**\"",
    "build": "webpack --config webpack.prod.js --mode production",
    "test": "jest --passWithNoTests --coverage"
  },
  "author": "eXo",
  "license": "LGPL",
  "devDependencies": {
    "@vue/test-utils": "^1.2.2",
    "babel-loader": "^8.1.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "ckeditor5-self-image": "0.0.3",
    "css-loader": "^5.2.6",
    "eslint": "^5.0.0",
    "eslint-config-meedsio": "^1.0.3",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-jest": "^21.17.0",
    "eslint-plugin-vue": "^5.0.0",
    "jest": "^26.6.3",
    "jest-fetch-mock": "^3.0.3",
    "postcss-loader": "^3.0.0",
    "raw-loader": "^0.5.1",
    "style-loader": "^0.23.1",
    "tar": "^6.1.9",
    "terser-webpack-plugin": "^3.0.3",
    "vue": "^2.6.11",
    "vue-i18n": "^8.15.0",
    "vue-jest": "^4.0.1",
    "vue-loader": "^14.2.3",
    "vue-template-compiler": "^2.6.11",
    "vuetify": "^2.1.7",
    "webpack": "^4.25.0",
    "webpack-cli": "^3.1.2",
    "webpack-merge": "^4.1.4"
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "jsdom",
    "roots": [
      "src/main/vue-tests/"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      ".*\\.(vue)$": "<rootDir>/node_modules/vue-jest"
    },
    "setupFiles": [
      "./src/main/vue-tests/setup.js"
    ],
    "coverageDirectory": "./target/coverage"
  },
  "babel": {
    "env": {
      "test": {
        "plugins": [
          "babel-plugin-transform-es2015-modules-commonjs"
        ]
      }
    }
  }
}
